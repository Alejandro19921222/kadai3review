<div class="col-md-3">
<h2>User info</h2>

<table class="table">
<tbody>
<tr><%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %></tr>
<tr>
<th>name</th>
<th><%= user.name %></th>
</tr>

<tr>
<th>introduction</th>
<th><%= user.introduction %></th>
</tr>
</tbody>
</table>
<%= link_to edit_user_path(user) do %>
<i class="btn btn-outline-secondary btn-block fas fa-user-cog"></i>
<% end %>

<%= form_with model:book, local: true do |f| %>
<% if book.errors.any? %>
  <h3><%= book.errors.count %>errors prohibited this obj from being saved:</h3>
  <ul>
    <% book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h2 class="mt-3">New book</h2>
<h5>Title</h5>
<%= f.text_field :title %>
<h5>Opinion</h5>
<%= f.text_area :body %>
<br>
<input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
<% end %>
</div>